<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   
    <TextView
        android:id="@+id/helloToast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="16dp"
        android:text="Hello Toast"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

   
    <Button
        android:id="@+id/showToastButton"
        android:background="@color/blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/toast_button_label"
        app:layout_constraintTop_toBottomOf="@id/helloToast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:textSize="17sp" />

    
    <TextView
        android:id="@+id/counterText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:paddingTop="150dp"
        android:paddingBottom="150dp"
        android:text="0"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="200sp"
        app:layout_constraintTop_toBottomOf="@id/showToastButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp" /> 


    <Button
        android:id="@+id/countButton"
        android:background="@color/blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/counterText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:textSize="17sp"/> 

</androidx.constraintlayout.widget.ConstraintLayout>
